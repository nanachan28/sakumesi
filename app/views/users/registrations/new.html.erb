<div class="usermain">
<h2>新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
    店舗オーナー様はこちらにチェックをお入れください。&ensp;<%= f.check_box :status ,{}, "true", "false" %>
  </div>

  <div class="field">
    <%= f.label :name, "氏名" %><br />
    <%= f.text_field :name,  autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード" %><br>
    <% if @minimum_password_length %>
    <span style="font-size:13px"><i class="fa-solid fa-circle-exclamation" style="color:orange;"></i>&thinsp;<u><%= @minimum_password_length %> 文字以上</u>で設定してください</span>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワード(確認)" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "登録", class: "button" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
</div>